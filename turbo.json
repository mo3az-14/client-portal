{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "env": [
        "SERVER_PORT",
        "DATABASE_URL",
        "BETTER_AUTH_URL",
        "CLIENT_URL",
        "GOOGLE_CLIENT_SECRET",
        "GOOGLE_CLIENT_ID",
        "UPLOADTHING_TOKEN",
        "NODE_ENV",
        "VITE_SERVER_URL",
        "VITE_FRONTEND_URL",
        "VITE_NODE_ENV"
      ],
      "passThroughEnv": [
        "VITE_SERVER_URL",
        "VITE_FRONTEND_URL",
        "VITE_NODE_ENV",
        "DATABASE_URL"
      ],
      "inputs": [
        "$TURBO_DEFAULTS",
        ".env*"
      ],
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {},
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [
        "build"
      ]
    }
  }
}
