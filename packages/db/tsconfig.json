{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "composite": true, // enables project references
        "rootDir": "src",
        "noEmit": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "allowImportingTsExtensions": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
